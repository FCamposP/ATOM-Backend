{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "lib",

    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,

    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["src"]
}
